{% extends 'base.html.twig' %}

{% block title %}Mon espace - LocationImmo
{% endblock %}

{% block body %}
	<aside id="fh5co-hero" class="js-fullheight">
		<div class="flexslider js-fullheight">
			<ul class="slides">
				<li style="background-image: url({{asset('assets/images/properties/home_04.jpg')}})">
					<div class="overlay"></div>
					<div class="container-fluid">
						<div class="row">
							<div class="col-md-8 col-md-offset-1 text-center js-fullheight slider-text">
								<div class="slider-text-inner">
                  <div class="global-form">
                    <h1 class="h3 mb-3 font-weight-normal text-green">{% trans %}Payment centre{% endtrans %}</h1>
                    <form method="post">
											<div id="errors" role="alert"></div>
											<div class="form-group">
                      	<input id="cardholder-name" type="text" placeholder="{{ 'Credit cardholder'|trans }}" class="form-control" required>
											</div>
											<div class="form-group">
												<div id="card-element" class="form-control">
												</div>
											</div>
                      <div id="card-errors"></div>
											<div class="button-right">
                      	<button id="card-button" type="button" data-secret="{{ intent.client_secret }}" class="btn btn-primary" >{% trans %}Validate the payment{% endtrans %}</button>
                      </div>
                    </form>
								  </div>
                </div>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</aside>
{% endblock %}
