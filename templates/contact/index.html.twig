							<div class="form-group">
								{{ form_row(contactForm.subject, {attr: {placeholder: 'Subject'|trans}}) }}
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group">
								{{ form_row(contactForm.body, {attr: {placeholder: 'Your message here...'|trans}}) }}
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group">
								<button type="submit" class="btn btn-primary icon fa-paper-plane-o">&nbsp;{{ 'Send Message'|trans }}</button>
							</div>
						</div>
					</div>
				{{ form_end(contactForm) }}
