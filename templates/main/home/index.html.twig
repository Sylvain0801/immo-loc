{% extends 'base.html.twig' %}

{% block title %}{% trans %}Home{% endtrans %} - LocationImmo{% endblock %}

{% block body %}
<aside id="fh5co-hero" class="js-fullheight">
	<div class="flexslider js-fullheight">
		<ul class="slides">
			<li style="background-image: url({{asset('assets/images/properties/home_01.jpg')}});">
				<div class="overlay"></div>
				<div class="container-fluid">
					<div class="row">
						<div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
						<div class="slider-text-inner">
							<h2 class="heading-title">Location Immo</h2>
							<a href="{{ path('announce_home') }}" class="btn btn-primary btn-homepage icon fa-search">&nbsp;{% trans %}Learn More{% endtrans %}</a>
							<a href="#fh5co-popular-properties" class="btn btn-primary btn-homepage icon fa-arrow-right">&nbsp;{% trans %}New Properties{% endtrans %}</a>
						</div>
					</div>
					</div>
				</div>
			</li>
		</ul>
	</div>
</aside>
<div id="fh5co-popular-properties" class="fh5co-section-gray">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
				<h3>{% trans %}New Properties{% endtrans %}</h3>
				<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit est facilis maiores, perspiciatis accusamus asperiores sint consequuntur debitis.</p>
			</div>
		</div>
		<div class="row">
			{% for announce in announces %}
				<div class="col-md-4 animate-box">
					<a href="#" class="fh5co-property" style="{% if announce.images|length > 0 %}background-image:url({{asset('images/announces/'~announce.images[0].image)}}){% else %}background-image:url({{asset('assets/images/properties/home_07.jpg')}}){% endif %}">
						<span class="status">{{ announce.type|trans }}</span>
						<div class="prop-details">
							<span class="price">{{ announce.price|trans }} â‚¬ / {% trans %}Month{% endtrans %}</span>
							<h3>{{ announce.title }}, {{ announce.city }}</h3>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</div>

